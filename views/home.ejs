<% if (msg.length !== 0) { %>
  <script>
    Swal.fire({
      icon: 'success',
      title: 'success!',
      text: '<%= msg %>',
      timer: 2000,
      showConfirmButton: false
    });
  </script>
<% } %>

<div class="container-fluid mt-3">
  <div class="card border-0 rounded-0 shadow-sm w-100">
    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center flex-wrap">
      <h5 class="mb-0">List Onvif Cameras</h5>
      <!-- <div class="mt-2 mt-sm-0">
        <a class="btn btn-success btn-sm" href="/camera/add-manual">
          <i class="bi bi-patch-plus"></i> Add Manual RTSP
        </a>
        <a class="btn btn-info btn-sm" href="/scan">
          <i class="bi bi-search"></i> Scan Camera
        </a>
      </div> -->
    </div>

    <div class="card-body p-2">
      <% if (cameras.length < 1) { %>
        <div class="p-4 text-center">
          <h4 class="text-muted">Camera Not Found</h4>
        </div>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-striped table-bordered mb-0 datatable">
            <thead class="bg-primary mt-3">
              <tr>
                <th class="text-center">No</th>
                <th class="text-center">Name</th>
                <th class="text-center">IP Address</th>
                <th class="text-center">Info</th>
              </tr>
            </thead>
            <tbody>
              <% cameras.forEach((cam, index) => { %>
              <tr>
                <td class="text-center"><%= index + 1 %></td>
                <td class="text-center"><%= cam.name %></td>
                <td class="text-center"><%= cam.ip %></td>
                <td class="text-center"></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<style>
  /* Tambahkan jarak bawah pada search bar DataTables */
  div.dataTables_filter {
    margin-top: 10px;
    margin-bottom: 15px; /* ðŸ‘ˆ kasih jarak bawah */
    margin-right: 15px;
  }

  /* Untuk layout header card dan tombol */
  .card-header .btn {
    margin-left: 5px;
  }

  /* Agar card benar-benar full lebar layar */
  .container-fluid .card {
    width: 100%;
  }

  /* Responsif untuk layar kecil */
  @media (max-width: 768px) {
    .card-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .card-header .btn {
      margin-top: 5px;
    }
  }
</style>
